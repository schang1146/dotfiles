#!/usr/bin/env bash

DOTFILES_ROOT=$(pwd -P)

source "$DOTFILES_ROOT"/scripts/logger

install() {
        info "Installing: ${1}..."
        sh -c "$2"
}

info "Attempting to update and upgrade packages..."
sudo apt update
sudo apt -y upgrade

for script_loc in "$DOTFILES_ROOT"/**/install.sh
do
    pkg="$(basename "$(dirname "$script_loc")")"

    if [ "$(command -v "$pkg")" != "" ];
    then
        success "Already installed: $pkg"
        continue
    fi

    user "Run ${script_loc}?, select an option:\n\
    [y]es, [n]o?"
    read -r -n 1 action
    if [ "$action" = "y" ];
    then
        info "Running ${script_loc}..."
        install "$pkg" "$script_loc"
    fi
done

# Restart current shell
exec $SHELL